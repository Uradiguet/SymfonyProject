{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h2 class="text-4xl font-extrabold dark:text-white">Utilisateurs</h2>
    <div class="divider"></div>
    <a href="{{ url('user_add') }}" class="btn btn-secondary">Ajouter un utilisateur...</a>
    <div class="divider"></div>
    {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <ul>
    {% for u in users %}
        <li>{{ u.login }} <a href="{{ url('user_delete',{id: u.id}) }}" class="btn btn-outline btn-error">X</a>
            <a href="{{ url('operation_add', {id: u.id}) }}" class="btn btn-outline btn-accent">Ajouter une Operation...</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}
