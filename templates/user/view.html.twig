{% extends 'base.html.twig' %}

{% block title %}Informations du compte{% endblock %}

{% block body %}
    <h1>Compte de {{ compte.login }}</h1>

    <p><strong>Solde:</strong> {{ compte.solde }}€</p>

    <h2>Détails des opérations</h2>
    <ul>
        {% for operation in compte.operations|reverse %}
            <div class="divider"></div>
            <div class="chat chat-start">
                <div class="chat-image avatar">
                    <div class="w-10 rounded-full">
                        <img
                                alt="Avatar"
                                src="https://preview.redd.it/rkp0dqscaytc1.jpeg?auto=webp&s=4c7242a5041664b535dc546dedd8b96de45a7b5d" />
                    </div>
                </div>

                <div class="chat-bubble">
                    <li>{{ operation.libelle }} | {{ operation.isTypeOperation ? 'Débit' : 'Crédit' }} | {{ operation.montant }}€</li>
                </div>
            </div>
        {% else %}
            <li>Aucune opération enregistrée.</li>
        {% endfor %}
    </ul>
    <div class="divider"></div>
    <a href="{{ path('operation_add', {id: compte.id}) }}" class="btn btn-neutral">Ajouter une opération</a>
    <a href="{{ path('app_user') }}" class="btn btn-neutral">Retour à la liste des comptes</a>
    <div class="divider"></div>

{% endblock %}
