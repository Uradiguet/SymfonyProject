{% extends 'base.html.twig' %}

{% block title %}Ajouter une opération{% endblock %}

{% block body %}
    <h2>Ajouter une opération pour le compte: {{ compte.nom }}</h2>
    {{ form_start(form) }}
    {{ form_row(form.type) }}
    {{ form_row(form.montant) }}
    <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
    <a href="{{ path('compte_view', {id: compte.id}) }}" class="btn btn-secondary">Annuler</a>
{% endblock %}
