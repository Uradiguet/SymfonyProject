{% extends 'base.html.twig' %}

{% block title %}Ajouter une opération{% endblock %}

{% block body %}
    <h2>Ajouter une opération pour le compte:{#  {{ utilisateur.login }}#}</h2>
    <div class="divider"></div>
    {{ form_start(form) }}
    {{ form_row(form.typeOperation) }}
    {{ form_row(form.montant) }}
    {% if form.montant.vars.errors is not empty %}
        <div class="alert alert-danger">
            {{ form_errors(form.montant) }}
        </div>
    {% endif %}
    {{ form_row(form.libelle) }}

    {{ form_end(form) }}
    {#  <a href="{{ path('compte_view', {id: utilisateur.id}) }}" class="btn btn-secondary">Annuler</a>#}
{% endblock %}
